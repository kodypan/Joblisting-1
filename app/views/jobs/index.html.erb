<div class="pull-right">
  <%=link_to("新建职位Add a Job", new_job_path, :class => "btn btn-primary")%>
</div>
<table class="table table-boldered">

  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%=link_to(job.title, job_path(job)) %>
    </td>
    <td>
      <%=link_to("Edit", edit_job_path(job))%>
      <%=link_to("Destroy", job_path(job), :method => :delete, :data => {:confirm =>"您确定吗？Are you sure?"})%>
    </td>
    <td>
      <%=job.created_at%>
    </td>
  </tr>
  <%end%>
</table>
